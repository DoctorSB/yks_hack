{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport { ref } from 'vue';\nimport axios from 'axios';\nexport default {\n  setup() {\n    const question = ref('');\n    const loading = ref(false);\n    const chatMessages = ref([]);\n    const addMessage = (text, isUser = false) => {\n      chatMessages.value.push({\n        id: chatMessages.value.length,\n        text,\n        isUser\n      });\n    };\n    const askQuestion = async () => {\n      loading.value = true;\n      addMessage(question.value, true);\n      try {\n        const res = await axios.post('API_ENDPOINT', {\n          question: question.value\n        });\n        addMessage(res.data.answer);\n\n        // Получаем контейнер с вводом текста\n        const inputContainer = this.$refs.inputContainer;\n\n        // Изменяем стили для перемещения вниз\n        inputContainer.style.position = 'absolute';\n        inputContainer.style.bottom = '0';\n      } catch (error) {\n        console.error(error);\n        addMessage('Произошла ошибка', false);\n      } finally {\n        loading.value = false;\n      }\n    };\n    const handleKeyDown = event => {\n      if (event.key === 'Enter' && !event.shiftKey) {\n        event.preventDefault();\n        askQuestion();\n      }\n    };\n    return {\n      question,\n      loading,\n      chatMessages,\n      askQuestion,\n      handleKeyDown\n    };\n  }\n};","map":{"version":3,"names":["ref","axios","setup","question","loading","chatMessages","addMessage","text","isUser","value","push","id","length","askQuestion","res","post","data","answer","inputContainer","$refs","style","position","bottom","error","console","handleKeyDown","event","key","shiftKey","preventDefault"],"sources":["/home/doduohor/vue/src/App.vue"],"sourcesContent":["<template>\n    <div class=\"chat-container\">\n        <div class=\"input-container\" ref=\"inputContainer\">\n            <textarea class=\"question-input\" v-model=\"question\" placeholder=\"Введите ваш вопрос здесь\"\n                @keydown=\"handleKeyDown\"></textarea>\n            <button class=\"send-button\" @click=\"askQuestion\">&</button>\n        </div>\n        <div v-if=\"loading\" class=\"loading\">Загрузка...</div>\n        <div v-if=\"response\" class=\"response\">\n            Ответ: {{ response }}\n        </div>\n    </div>\n</template>\n\n<script>\nimport { ref } from 'vue';\nimport axios from 'axios';\n\nexport default {\n    setup() {\n        const question = ref('');\n        const loading = ref(false);\n        const chatMessages = ref([]);\n\n        const addMessage = (text, isUser = false) => {\n            chatMessages.value.push({\n                id: chatMessages.value.length,\n                text,\n                isUser,\n            });\n        };\n\n        const askQuestion = async () => {\n            loading.value = true;\n            addMessage(question.value, true);\n\n            try {\n                const res = await axios.post('API_ENDPOINT', { question: question.value });\n                addMessage(res.data.answer);\n\n                // Получаем контейнер с вводом текста\n                const inputContainer = this.$refs.inputContainer;\n\n                // Изменяем стили для перемещения вниз\n                inputContainer.style.position = 'absolute';\n                inputContainer.style.bottom = '0';\n            } catch (error) {\n                console.error(error);\n                addMessage('Произошла ошибка', false);\n            } finally {\n                loading.value = false;\n            }\n        };\n\n        const handleKeyDown = (event) => {\n            if (event.key === 'Enter' && !event.shiftKey) {\n                event.preventDefault();\n                askQuestion();\n            }\n        };\n\n        return { question, loading, chatMessages, askQuestion, handleKeyDown };\n    }\n};\n</script>\n\n\n<style>\nbody {\n    background-color: #000000;\n    /* Цвет фона страницы */\n    margin: 0;\n    padding: 0;\n    font-family: Arial, sans-serif;\n    /* Установка шрифта */\n}\n\n.chat-container {\n    max-width: 600px;\n    margin: 20px auto;\n    padding: 20px;\n    background-color: #1e1e1e;\n    border-radius: 10px;\n    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);\n    color: #ffffff;\n}\n\n.input-container {\n    display: flex;\n    /* Используем flexbox */\n    align-items: stretch;\n    /* Выравнивание элементов по высоте */\n    margin-bottom: 15px;\n}\n\n.question-input {\n    flex-grow: 1;\n    /* Занимает все доступное пространство */\n    padding: 12px;\n    background-color: #2a2a2a;\n    border: 1px solid #333333;\n    border-radius: 6px 0 0 6px;\n    /* Скругляем только левые углы */\n    color: #ffffff;\n    resize: none;\n}\n\n.send-button {\n    padding: 0 15px;\n    background-color: #4caf50;\n    color: white;\n    border: none;\n    border-radius: 0 6px 6px 0;\n    /* Скругляем только правые углы */\n    cursor: pointer;\n    transition: background-color 0.3s, transform 0.2s;\n}\n\n.send-button:hover {\n    background-color: #43a047;\n    transform: scale(1.05);\n}\n\n.loading {\n    text-align: center;\n    color: #4caf50;\n    margin-top: 10px;\n    font-family: Arial, sans-serif;\n}\n</style>\n"],"mappings":";AAeA,SAASA,GAAE,QAAS,KAAK;AACzB,OAAOC,KAAI,MAAO,OAAO;AAEzB,eAAe;EACXC,KAAKA,CAAA,EAAG;IACJ,MAAMC,QAAO,GAAIH,GAAG,CAAC,EAAE,CAAC;IACxB,MAAMI,OAAM,GAAIJ,GAAG,CAAC,KAAK,CAAC;IAC1B,MAAMK,YAAW,GAAIL,GAAG,CAAC,EAAE,CAAC;IAE5B,MAAMM,UAAS,GAAIA,CAACC,IAAI,EAAEC,MAAK,GAAI,KAAK,KAAK;MACzCH,YAAY,CAACI,KAAK,CAACC,IAAI,CAAC;QACpBC,EAAE,EAAEN,YAAY,CAACI,KAAK,CAACG,MAAM;QAC7BL,IAAI;QACJC;MACJ,CAAC,CAAC;IACN,CAAC;IAED,MAAMK,WAAU,GAAI,MAAAA,CAAA,KAAY;MAC5BT,OAAO,CAACK,KAAI,GAAI,IAAI;MACpBH,UAAU,CAACH,QAAQ,CAACM,KAAK,EAAE,IAAI,CAAC;MAEhC,IAAI;QACA,MAAMK,GAAE,GAAI,MAAMb,KAAK,CAACc,IAAI,CAAC,cAAc,EAAE;UAAEZ,QAAQ,EAAEA,QAAQ,CAACM;QAAM,CAAC,CAAC;QAC1EH,UAAU,CAACQ,GAAG,CAACE,IAAI,CAACC,MAAM,CAAC;;QAE3B;QACA,MAAMC,cAAa,GAAI,IAAI,CAACC,KAAK,CAACD,c